<p id="notice"><%= notice %></p>

<h1>Комментарии</h1>

<table>
  <thead>
    <tr>
      <th>Читайте</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= link_to t('common.show'), comment %></td>
        <td><%= link_to t('common.edit'), edit_comment_path(comment) %></td>
        <td><%= link_to t('common.delete'), comment, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый комментарий', new_comment_path %>
<%= link_to 'На главную', root_path %>
