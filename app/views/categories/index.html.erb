<p id="notice"><%= notice %></p>

<h1>Категории</h1>

<table>
  <thead>
  <tr>
    <th>Заголовок</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= link_to 'Показать', [:admin, category] %></td>
        <td><%= link_to 'Редактировать', edit_category_path(category) %></td>
        <td><%= link_to 'Удалить', [:admin, category], method: :delete, data: { confirm: 'Уверены?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая категория', new_category_path %>
<%= link_to 'На главную', root_path %>
