<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @category.title %></p>
<% if @category.posts.empty? %>
    <h4>Категория пустая</h4>
    <% else %>
<%= render @posts %>
    <% end %>
<%= link_to 'Редактировать', edit_admin_category_path(@category) %> |
<%= link_to 'Назад', admin_categories_path %>
<% if current_user && current_user.admin? %>
<%= link_to 'Все категории', admin_categories_path %>
<% end %>
