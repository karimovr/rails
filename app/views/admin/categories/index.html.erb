

<h1>Категории</h1>

<table>
  <thead>
  <tr>
    <th>Название</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= link_to t('common.show'), [:admin, category] %></td>
        <td><%= link_with_icon :pencil, edit_admin_category_path(category), title: t('common.edit')  %></td>
        <td><%= link_with_icon 'trash-o', [ :admin, category], title: t('common.delete'), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новая категория', new_admin_category_path %>
<%= link_to 'На главную', root_path %>
