<h1>Пользователи</h1>

<table>
  <thead>
  <tr>
    <th>Читайте</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>

        <td><%= link_with_icon :pencil, edit_admin_user_path(user), title: t('common.edit') %></td>
        <td><%= link_with_icon 'trash-o', [ :admin, user], title: t('common.delete'),  method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый пользователь', new_admin_user_path %>
<%= link_to 'На главную', root_path %>